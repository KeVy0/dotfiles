# window colors
#                       border              background         text                 indicator
client.focused          #000000           $black          $text-color               #030585
client.unfocused        $iancative-bg-color $inactive-bg-color $inactive-text-color #030585
client.focused_inactive $iancative-bg-color $inactive-bg-color $inactive-text-color #030585
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #030585

bar {

	colors {
		background $black
	    	separator #757575
		#                  border             background         text
		focused_workspace  $bg-color          $black          $text-color
		inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
		urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
	}
	# i3bar position
	position top
	# Using custom i3status.conf
    status_command i3blocks
}


